<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/flMask"
             android:background="@color/black"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llRoot"
        android:orientation="vertical"
        android:background="@drawable/wwb_distance_shape"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/block_item_title_font"
                android:padding="@dimen/margin_15dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/title"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_16sp"
                android:text="请输入联系人" />


        </FrameLayout>



        <View style="@style/follow_split_line" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <LinearLayout
            android:padding="@dimen/margin_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/left"
                android:textColor="@color/black_33"
                android:layout_width="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="@dimen/text_size_16sp"
                android:text="姓名"/>
            <EditText
                android:textCursorDrawable="@color/color_red"
                android:textSize="@dimen/text_size_16sp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:layout_marginLeft="@dimen/margin_30dp"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/margin_20dp"
                android:textColorHint="@color/black_33"
                android:id="@+id/et_input"
                android:textColor="@color/black_33"
                android:gravity="start"
                android:maxLength="11"/>
        </LinearLayout>
        <View style="@style/follow_split_line" />
        <RelativeLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_marginLeft="@dimen/margin_40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_40dp"
                    android:gravity="center"
                    android:id="@+id/cancel"
                    android:layout_width="@dimen/length_view_70dp"
                    android:layout_height="@dimen/length_view_35dp"
                    android:background="@drawable/wwb_shape_blue"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="取消"/>
                <TextView
                    android:layout_marginRight="@dimen/margin_40dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:id="@+id/confirm"
                    android:layout_width="@dimen/length_view_70dp"
                    android:layout_height="@dimen/length_view_35dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/wwb_shape_blue"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="确定"/>

        </RelativeLayout>


    </LinearLayout
       >
</FrameLayout>