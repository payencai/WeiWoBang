<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flMask"
    android:background="@color/tv_666"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llRoot"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_marginLeft="@dimen/margin_40dp"
        android:layout_marginRight="@dimen/margin_30dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvDialogTitle"
                style="@style/form_item_title_font"
                android:padding="@dimen/margin_15dp"
                android:layout_marginLeft="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_15sp"
                android:text="提现申请" />
            <ImageView
                android:id="@+id/imgClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/margin_25dp"
                android:src="@mipmap/close" />

        </FrameLayout>
        <View style="@style/follow_split_line"
            android:layout_marginLeft="@dimen/margin_25dp"
            android:layout_marginRight="@dimen/margin_25dp"
            />

        <!--<TextView-->
            <!--android:id="@+id/tvDialogContent"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="16sp"-->
            <!--android:text="提现申请"/>-->
        <LinearLayout
            android:padding="0dp"
            android:layout_marginLeft="@dimen/margin_25dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/form_item_title_font"
                android:layout_marginLeft="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_15sp"
                android:text="提现金额"/>
            <EditText
                android:id="@+id/edtWithdrawMoney"
                style="@style/edit_item_white"
                android:layout_height="@dimen/length_view_30dp"
                android:layout_marginLeft="@dimen/margin_30dp"
                android:layout_marginRight="@dimen/margin_30dp"
                android:paddingLeft="@dimen/margin_20dp"
                android:paddingRight="@dimen/margin_20dp"
                android:background="@drawable/bg_edittext"
                android:layout_gravity="center"
                android:inputType="numberDecimal"
                android:hint="请输入提现金额"
                android:maxLength="100" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/margin_25dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/form_item_title_font"
                android:layout_marginLeft="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_15sp"
                android:text="提现方式"/>
            <FrameLayout
                android:id="@+id/flMethodAlipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_30dp"
                android:layout_marginRight="@dimen/margin_5dp"
                android:layout_gravity="left">
                <ImageView
                    android:tag="BG"
                    android:layout_width="@dimen/length_view_70dp"
                    android:layout_height="@dimen/length_view_35dp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/em_btn_yellow_stroke_selector"/>
                <TextView
                    android:tag="TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="支付宝"
                    android:textColor="@color/yellow_1e"
                    android:textSize="@dimen/text_size_15sp"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/flMethodBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_marginRight="@dimen/margin_5dp"
                >
                <ImageView
                    android:tag="BG"
                    android:layout_width="@dimen/length_view_70dp"
                    android:layout_height="@dimen/length_view_35dp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center_horizontal"
                    android:visibility="invisible"
                    android:src="@drawable/em_btn_yellow_stroke_selector"/>
                <TextView
                    android:tag="TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="银行卡"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15sp"/>
            </FrameLayout>
        </LinearLayout>
        <TextView
            style="@style/form_item_title_font"
            android:layout_marginLeft="@dimen/margin_25dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="@dimen/text_size_16sp"
            android:text="收款信息"/>
        <EditText
            android:id="@+id/edtWithdrawPerson"
            style="@style/edit_item_white"
            android:layout_height="@dimen/length_view_30dp"
            android:layout_marginLeft="@dimen/margin_25dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_25dp"
            android:hint="请输入收款人姓名"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            android:background="@drawable/bg_edittext"
            android:maxLength="100" />
        <EditText
            android:id="@+id/edtWithdrawAccount"
            style="@style/edit_item_white"
            android:layout_height="@dimen/length_view_30dp"
            android:layout_marginLeft="@dimen/margin_25dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_25dp"
            android:hint="请输入收款账号"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            android:background="@drawable/bg_edittext"
            android:maxLength="100" />
        <FrameLayout
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25dp"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="@dimen/length_view_120dp"
                android:layout_height="@dimen/length_view_35dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/em_btn_yellow_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="提交"
                android:textColor="@color/tv_1f"
                android:textSize="@dimen/text_size_15sp"/>
        </FrameLayout>

    </LinearLayout>
</FrameLayout>