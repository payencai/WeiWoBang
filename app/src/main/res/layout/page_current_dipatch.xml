<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:background="@color/tv_666"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingTop="@dimen/margin_15dp"
             android:paddingBottom="@dimen/margin_15dp">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_ll_corner"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/block_item_title_font"
                        android:layout_marginLeft="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="单号："/>
                    <TextView
                        android:id="@+id/tvOrderId"
                        style="@style/block_item_title_font"
                        android:layout_marginLeft="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/form_item_text_font"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_gravity="bottom|center"
                        android:gravity="bottom"
                        android:textColor="@color/grey_ae"
                        android:textSize="15sp"
                        android:text="取货码"/>
                    <TextView
                        android:id="@+id/tvPickUpCode"
                        style="@style/block_item_title_font"
                        android:layout_marginLeft="8dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:textSize="30sp"
                        android:text=""/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="@dimen/margin_80dp"
                    android:layout_marginRight="@dimen/margin_80dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/imgPickUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/hold_y"/>
                        <TextView
                            android:id="@+id/tvPickUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/form_item_text_font"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:text="取货"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/imgDelivery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/send"/>
                        <TextView
                            android:id="@+id/tvDelivery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/form_item_text_font"
                            android:layout_gravity="center"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="10dp"
                            android:text="送货"/>
                    </LinearLayout>
                    <!--<LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/setting"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/form_item_text_font"
                            android:layout_gravity="center"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="10dp"
                            android:text="送达"/>
                    </LinearLayout>-->

                </LinearLayout>

                <com.weiwobang.paotui.view.CompCourierCell
                    android:id="@+id/compCourier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    app:chartCellModle="limited"/>
                <com.weiwobang.paotui.view.CompChartCell
                    android:id="@+id/compDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    app:chartCellModle="limited"/>


                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="@dimen/margin_50dp"
                    android:layout_marginRight="@dimen/margin_50dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            style="@style/form_item_text_font"
                            android:layout_marginLeft="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_size_10sp"
                            android:text="预计跑腿距离"/>
                        <TextView
                            android:id="@+id/tvDistance"
                            style="@style/block_item_title_font"
                            android:layout_marginLeft="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_size_20sp"
                            android:text="未知"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            style="@style/form_item_text_font"
                            android:layout_marginLeft="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_size_10sp"
                            android:text="佣金"/>
                        <TextView
                            android:id="@+id/tvCommission"
                            style="@style/block_item_title_font"
                            android:layout_marginLeft="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_size_20sp"
                            android:text="未知"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <TextView
        android:id="@+id/btnProcessTask"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="@drawable/shape_btn_bottom_corner"
        android:textColor="@color/tv_1f"
        android:textSize="18sp"
        android:text="查看进度"/>
</FrameLayout>