<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_333"
        android:orientation="vertical">


         <include layout="@layout/main_top_layout"></include>

        <LinearLayout
            android:paddingLeft="@dimen/margin_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:background="@color/black"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_20dp"
            android:paddingRight="@dimen/margin_10dp"
            android:paddingTop="@dimen/margin_20dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/form_item_title_font"
                    android:layout_height="wrap_content"
                    android:text="店铺名称" />

                <TextView
                    android:id="@+id/tvShop"
                    style="@style/form_item_title_font"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="XXXX大学城南店" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp">

                <TextView
                    style="@style/form_item_title_font"
                    android:layout_height="wrap_content"
                    android:text="店铺ID" />

                <TextView
                    android:id="@+id/tvShopId"
                    style="@style/form_item_title_font"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="0001" />

            </FrameLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:background="@color/black"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_15dp"
            android:paddingRight="@dimen/margin_10dp"
            android:paddingTop="@dimen/margin_15dp">

            <TextView
                style="@style/block_item_title_font"
                android:layout_height="wrap_content"
                android:text="取货信息" />

            <FrameLayout
                android:id="@+id/name_layout"
                android:paddingLeft="@dimen/margin_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15dp">

                <TextView
                    style="@style/form_item_title_font"
                    android:layout_height="wrap_content"
                    android:text="联系人"
                    android:textSize="@dimen/text_size_15sp" />

                <TextView
                    android:id="@+id/tvContact"
                    style="@style/form_item_text_font"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="@dimen/length_view_20dp"
                    android:text="XXXX"
                    android:textSize="@dimen/text_size_15sp" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="10dp"
                    android:layout_gravity="right|center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/wwb_enter" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/phone_layout"
                android:paddingLeft="@dimen/margin_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15dp">

                <TextView
                    style="@style/form_item_title_font"
                    android:layout_height="wrap_content"
                    android:text="联系方式"
                    android:textSize="@dimen/text_size_15sp" />

                <TextView
                    android:id="@+id/tvContactTel"
                    style="@style/form_item_text_font"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="@dimen/length_view_20dp"
                    android:text="XXXX"
                    android:textSize="@dimen/text_size_15sp" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="10dp"
                    android:layout_gravity="right|center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/wwb_enter" />
            </FrameLayout>

            <LinearLayout
                android:paddingLeft="@dimen/margin_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/form_item_title_font"
                    android:layout_height="wrap_content"
                    android:text="店铺地址"
                    android:id="@+id/tvAddrTag"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_15sp" />

                <LinearLayout
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:id="@+id/address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right|center_vertical">


                    <TextView
                        android:id="@+id/tvSellerAddr"
                        style="@style/form_item_text_font"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true"
                        android:text="XXXX"
                        android:textSize="@dimen/text_size_15sp" />
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="10dp"
                        android:layout_gravity="right|center_vertical"
                        android:scaleType="fitXY"
                        android:id="@+id/enterAddr"
                        android:src="@mipmap/wwb_enter"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:paddingRight="@dimen/margin_5dp"
            android:paddingLeft="@dimen/margin_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:background="@color/black"
            android:paddingBottom="@dimen/margin_10dp"
            android:paddingTop="@dimen/margin_10dp">

            <TextView
                style="@style/form_item_title_font"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="可用余额"
                android:textSize="@dimen/text_size_14sp" />

            <TextView

                android:id="@+id/tvBalance"
                style="@style/block_item_title_font"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="90.0"
                android:textSize="28sp" />

            <FrameLayout
                android:layout_marginLeft="5dp"
                android:id="@+id/btnRefund"
                android:layout_width="@dimen/length_view_60dp"
                android:layout_height="@dimen/length_view_30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/em_btn_yellow_selector">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="退款"
                    android:textColor="@color/tv_1f"
                    android:textSize="@dimen/text_size_14sp" />
            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>


</FrameLayout>