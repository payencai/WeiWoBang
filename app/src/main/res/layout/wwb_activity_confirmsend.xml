<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".wwb.activity.ConfirmSendActivity">

    <include layout="@layout/wwb_header"></include>

    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <RelativeLayout
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/wwb_layout_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:src="@mipmap/wwb_fa"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/fa_fir_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="广州大学"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/text_size_16sp"/>

                    <TextView
                        android:id="@+id/fa_sec_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="虹梅路虹梅路虹梅路虹梅路虹梅路虹梅路虹梅路虹梅路虹梅路虹梅路虹梅路虹梅路虹梅路虹梅路虹梅路"
                        android:textColor="#888"
                        android:textSize="@dimen/text_size_14sp"/>

                    <LinearLayout
                        android:layout_marginBottom="@dimen/margin_5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fa_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="李白"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/text_size_14sp"/>

                        <View

                            android:layout_width="1dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="@dimen/margin_20dp"
                            android:layout_marginRight="@dimen/margin_20dp"
                            android:alpha="0.5"
                            android:background="#cfcfcf"></View>

                        <TextView
                            android:id="@+id/fa_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13202908144"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/text_size_14sp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_below="@+id/wwb_layout_send"
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="5dp"
                    android:layout_height="27dp"
                    android:src="@mipmap/wwb_way"/>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="#cfcfcf"></View>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_help"
                android:layout_below="@id/line2"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/wwb_shou"/>
                    </LinearLayout>
                 <LinearLayout
                     android:orientation="vertical"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <TextView
                         android:id="@+id/shou_fir_addr"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"

                         android:text="广州大学"
                         android:textColor="@color/color_333"
                         android:textSize="@dimen/text_size_16sp"/>

                     <TextView
                         android:id="@+id/shou_sec_addr"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"

                         android:text="虹梅虹梅路虹梅路虹梅路虹梅路虹梅路虹梅路虹梅路虹梅路虹梅路虹梅路虹梅路路"
                         android:textColor="#888"
                         android:textSize="@dimen/text_size_14sp"/>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"

                         android:gravity="center_vertical"
                         android:orientation="horizontal">

                         <TextView
                             android:id="@+id/shou_name"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="李白"
                             android:textColor="@color/color_333"
                             android:textSize="@dimen/text_size_14sp"/>

                         <View

                             android:layout_width="1dp"
                             android:layout_height="15dp"
                             android:layout_marginLeft="@dimen/margin_20dp"
                             android:layout_marginRight="@dimen/margin_20dp"
                             android:alpha="0.5"
                             android:background="#cfcfcf"></View>

                         <TextView
                             android:id="@+id/shou_phone"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="13202908144"
                             android:textColor="@color/color_333"
                             android:textSize="@dimen/text_size_14sp"/>
                     </LinearLayout>
                 </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:layout_below="@+id/layout_help"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/color_333"
                    android:text="备注"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"

                    android:id="@+id/wwb_beizhu_layout"
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:background="@drawable/wwb_beizhu_shape">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:hint="请输入备注信息"
                        android:textColor="#cecece"
                        android:textSize="@dimen/text_size_14sp"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.amap.api.maps.MapView
            android:id="@+id/confirm_mapview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/wwb_distance_shape"
            android:elevation="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wwb_distance"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:text=""
                android:textColor="@color/color_333"
                android:textSize="@dimen/text_size_16sp"/>
            <View
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:layout_marginTop="13dp"
                android:background="#cfcfcf"></View>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:text="预算佣金：6元"
                android:textColor="@color/color_333"
                android:textSize="@dimen/text_size_16sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/wwb_confirm"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:background="@color/press_yellow"
            android:elevation="@dimen/margin_5dp"
            android:gravity="center"
            android:text="确定订单"
            android:textColor="@color/white"
            android:textSize="17sp"/>
    </RelativeLayout>

</LinearLayout>