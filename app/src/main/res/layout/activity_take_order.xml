<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#f8f8f8"
             tools:context=".activity.TakeOrderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout

                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/color_333"
                android:background="@color/yellow_1e"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50dp">
                <ImageView
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:src="@mipmap/wwb_black_back"
                    android:id="@+id/orderback"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin_30dp"
                    android:layout_height="20dp"/>
                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@mipmap/wwb_home_logo"
                    android:layout_width="@dimen/length_view_100dp"
                    android:layout_height="25dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/top"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_15dp"
                android:background="@drawable/wwb_e2_bg"
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <RelativeLayout
                    android:id="@+id/addr_layout"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:elevation="5dp"
                    android:layout_alignParentLeft="true">

                    <ImageView
                        android:id="@+id/ic_locate"
                        android:layout_width="@dimen/margin_15dp"
                        android:layout_height="@dimen/length_view_30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/wwb_location_choose"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:id="@+id/quContact"
                        android:layout_toRightOf="@id/ic_locate"
                        android:text="李白 13202908144"
                        android:textColor="@color/tv_666"
                        android:visibility="gone"/>

                    <TextView

                        android:id="@+id/now"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:layout_toLeftOf="@id/line1"
                        android:layout_toRightOf="@id/ic_locate"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="请输入取货地址及联系人"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/text_size_14sp"/>

                    <TextView
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:id="@+id/quAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/margin_15dp"
                        android:layout_toRightOf="@id/ic_locate"
                        android:text="广州大学城信枢纽"
                        android:textColor="@color/color_333"
                        android:visibility="gone"/>


                </RelativeLayout>
                <View
                    android:layout_alignBottom="@id/addr_layout"
                    android:background="#e2e2e2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></View>
                <RelativeLayout
                    android:id="@+id/addr2_layout"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/iclocate"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/wwb_location_choose"
                        android:layout_width="@dimen/margin_15dp"
                        android:layout_height="@dimen/length_view_30dp"/>
                    <TextView
                        android:id="@+id/songContact"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:textColor="@color/tv_666"
                        android:layout_alignParentTop="true"
                        android:text="李白 13202908144"
                        android:layout_toRightOf="@id/iclocate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/where"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:layout_toLeftOf="@id/line2"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size_14sp"
                        android:layout_toRightOf="@id/iclocate"
                        android:text="请输入送货地址及联系人"
                        android:textColor="@color/color_999"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:id="@+id/songAddress"
                        android:visibility="gone"
                        android:textColor="@color/color_333"
                        android:layout_marginBottom="@dimen/margin_15dp"
                        android:layout_alignParentBottom="true"
                        android:text="广州大学城信枢纽"
                        android:layout_toRightOf="@id/iclocate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:background="@drawable/wwb_e2_bg"
                android:layout_margin="@dimen/margin_15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_view_100dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_huo"
                        android:textSize="@dimen/text_size_16sp"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:textColor="#444444"
                        android:text="货品名称"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:maxLines="2"
                        android:id="@+id/goodname"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_20dp"
                        android:textSize="@dimen/text_size_14sp"
                        android:hint="请输入货品名称 (选填)"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_toRightOf="@id/tv_huo"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_des"
                        android:textSize="@dimen/text_size_16sp"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:textColor="#444444"
                        android:text="留言"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:maxLines="2"
                        android:id="@+id/desc"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_20dp"
                        android:textSize="@dimen/text_size_14sp"
                        android:hint="补充描述（选填）"
                        android:layout_marginLeft="@dimen/margin_45dp"
                        android:layout_toRightOf="@id/tv_des"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <include

            android:layout_alignParentBottom="true"
            layout="@layout/wwb_bottom_include"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

        </include>
    </RelativeLayout>
</FrameLayout>