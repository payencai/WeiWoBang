<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/wwb_distance_shape"
                android:gravity="center"
                android:orientation="vertical">


    <ImageView
        android:layout_width="@dimen/margin_15dp"
        android:layout_height="@dimen/margin_15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/wwb_pay_delete"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_20dp"
        android:text="支付佣金"
        android:textColor="@color/black_33"
        android:textSize="17sp"/>

    <TextView
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginTop="80dp"
        android:background="@color/press_yellow"
        android:gravity="center"
        android:text="6元"
        android:textColor="#fffefe"
        android:textSize="17sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="71dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_search_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:text="输入支付密码"
            android:textColor="#cecece"
            android:textSize="@dimen/text_size_14sp"/>

        <EditText
            android:maxLength="20"
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:hint="数字或字母"
            android:textColorHint="#cecece"
            android:background="@null"
            android:textColor="@color/color_333"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/wwb_confirm_pay"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="80dp"
        android:background="@color/press_yellow"
        android:gravity="center"
        android:text="确定"
        android:textColor="#fffefe"
        android:textSize="17sp"/>
</RelativeLayout>