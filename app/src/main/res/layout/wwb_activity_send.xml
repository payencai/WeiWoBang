<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".wwb.activity.HelpSendActivity">
    <include layout="@layout/wwb_header" ></include>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/wwb_select_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/send_firAddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:background="@null"
                android:text="请输入目的地址"
                android:textColor="#cecece"
                android:textSize="16sp"/>
            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/send_secAddr"
                android:background="@null"
                android:textColor="#cecece"
                android:text="详细指引如：西环路口左转50米"
                android:textSize="14sp"
                android:layout_marginBottom="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:alpha="0.5"
            android:background="#cfcfcf"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <LinearLayout
            android:id="@+id/wwb_contact"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <EditText
                android:maxLength="10"
                android:id="@+id/send_name"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:textColor="#cecece"
                android:hint="姓名"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:alpha="0.5"
                android:background="#cfcfcf"
                android:layout_width="1dp"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_height="match_parent"></View>
            <EditText
                android:maxLength="11"
                android:inputType="number"
                android:id="@+id/send_phone"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:textColor="#cecece"
                android:hint="联系电话"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"

            android:elevation="@dimen/margin_5dp"
            android:src="@mipmap/wwb_map_location"/>

        <com.amap.api.maps.MapView
            android:id="@+id/wwb_addr_mapview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:clickable="false"/>
        <LinearLayout
            android:elevation="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="80dip"
            android:background="@drawable/wwb_shape_bottom"
            android:orientation="vertical"
            android:padding="2dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:src="@mipmap/wwb_location_list"
                    android:layout_width="10dp"
                    android:layout_height="12dp"/>
                <TextView
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/color_333"
                    android:text="附近地点"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:alpha="0.5"
                android:background="#cfcfcf"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <ListView
                android:id="@+id/www_ipo_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>