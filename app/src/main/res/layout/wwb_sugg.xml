<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/press_yellow"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/sugg_back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/wwb_black_back"
            android:layout_width="12dp"
            android:layout_height="30dp"/>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/color_333"
        android:textStyle="bold"
        android:text="问题反馈"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="@drawable/wwb_content_fill"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="230dp">
        <EditText
            android:id="@+id/sugg_in"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:hint="请输入你在使用过长中遇到的问题"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView
        android:id="@+id/sugg_submit"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginRight="15dp"
        android:textColor="@color/black_33"
        android:text="提交反馈"
        android:textSize="16sp"
        android:background="@drawable/wwb_shape_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</LinearLayout>