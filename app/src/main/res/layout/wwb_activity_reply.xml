<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ReplyActivity">
    <RelativeLayout

        android:id="@+id/reg_title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/wwb_black_back"
            android:layout_width="12dp"
            android:layout_height="20dp"/>
        <TextView
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textColor="@color/color_333"
            android:text="评论详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/margin_20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/comment_head"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:src="@mipmap/wwb_default_photo"
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="@dimen/margin_40dp"/>
        <TextView
            android:id="@+id/nickname"
            android:textSize="@dimen/text_size_18sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/comment_head"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textColor="@color/color_333"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:text="用户1098"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/repot"
            android:layout_marginRight="@dimen/margin_20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/wwb_tipoff"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_reply"
        android:textSize="16sp"
        android:text="我是留言随时随地都得到"
        android:textColor="@color/color_333"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="@dimen/margin_30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/comm_time"
        android:text="21小时前"
        android:textColor="@color/color_999"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_30dp"
        android:layout_marginLeft="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView

        android:gravity="center"
        android:text="全部回复"
        android:textColor="@color/color_999"
        android:layout_marginTop="@dimen/margin_30dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh_new"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleview_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </android.support.v4.widget.SwipeRefreshLayout>
        <RelativeLayout
            android:layout_marginBottom="@dimen/margin_5dp"
            android:background="@color/white"
            android:id="@+id/layout"

            android:paddingLeft="@dimen/margin_15dp"
            android:paddingBottom="@dimen/margin_10dp"
            android:paddingTop="10dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <EditText
                android:paddingTop="@dimen/margin_10dp"
                android:paddingLeft="@dimen/margin_20dp"
                android:gravity="left"
                android:id="@+id/comment_input"
                android:layout_marginRight="70dp"
                android:background="@drawable/wwb_content_fill"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/reply"
                android:textSize="16sp"
                android:textColor="#518ffa"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:text="回复"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>