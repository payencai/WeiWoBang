<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/item_icon"
        android:layout_marginRight="20dp"
        android:src="@mipmap/wwb_icon"
        android:layout_alignParentRight="true"
        android:layout_width="140dp"
        android:layout_height="130dp"/>
    <TextView
        android:maxEms="18"
        android:ellipsize="end"
        android:layout_marginRight="150dp"
        android:id="@+id/item_title"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black_33"
        android:textSize="18sp"
        android:text="我还是标题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_toLeftOf="@id/item_icon"
        android:maxEms="18"
        android:ellipsize="end"
        android:maxLines="3"
        android:id="@+id/item_detail"
        android:layout_below="@id/item_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/color_999"
        android:textSize="16sp"
        android:text="信息详情缩率"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:paddingRight="@dimen/margin_5dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_toLeftOf="@id/item_icon"
        android:layout_marginTop="115dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/type"
           android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/color_999"
            android:textSize="14sp"
            android:text="二手物品"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_toLeftOf="@id/comment_num"
            android:id="@+id/iv_comm"
            android:src="@mipmap/wwb_comment"
            android:layout_width="@dimen/margin_20dp"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/comment_num"
            android:layout_toLeftOf="@+id/iv_read"
            android:layout_marginLeft="5dp"
            android:textColor="@color/color_999"
            android:textSize="14sp"
            android:text="14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_read"
            android:layout_toLeftOf="@id/read_num"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/wwb_read"
            android:layout_width="@dimen/margin_20dp"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/read_num"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/color_999"
            android:textSize="14sp"
            android:text="2000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginTop="20dp"
        android:background="#e2e2e2"
        android:layout_below="@id/item_icon"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
</RelativeLayout>